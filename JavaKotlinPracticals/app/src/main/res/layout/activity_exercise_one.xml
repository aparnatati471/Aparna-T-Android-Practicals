    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uiwidgetd.activity.intent.fragment.ExerciseOne">

    <FrameLayout
        android:id="@+id/fragment_cotainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_500sdp"
