<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View" />
        <variable
            name="clickOne"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="permission.model.DemoTwo">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_disp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_camera_img"
            android:layout_width="0dp"
            android:onClick="@{clickOne.onClick}"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.9"
            android:text="@string/image_from_camera"
            android:textSize="@dimen/_16ssp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/img_disp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_gallery_img"
            android:layout_width="0dp"
            android:onClick="@{clickOne.onClick}"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.9"
            android:text="@string/image_from_gallery"
            android:textSize="@dimen/_16ssp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/btn_camera_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save_img"
            android:layout_width="0dp"
            android:onClick="@{clickOne.onClick}"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.9"
            android:text="@string/save_to_gallery"
            android:textSize="@dimen/_16ssp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/btn_gallery_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>