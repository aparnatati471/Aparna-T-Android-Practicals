<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="bindingAdapter"
            type="android.architecture.bindingandinverseadapters.MyBindingAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="android.architecture.bindingandinverseadapters.BindingAndReverseBindingAdapters">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_greet"
            gettext="@{@string/app_name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/edt_text"
            android:layout_width="0dp"
            android:imeOptions="actionDone"
            android:layout_height="0dp"
            app:edtSetText="@{bindingAdapter.Companion.value}"
            app:layout_constraintHeight_percent="0.08"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintTop_toBottomOf="@id/txt_greet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edt_text"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
