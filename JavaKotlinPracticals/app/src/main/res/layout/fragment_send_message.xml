<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainviewmodel"
            type="uiwidgetd.activity.intent.fragment.MyViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        tools:context="uiwidgetd.activity.intent.fragment.SendMessage">

        <TextView
            android:id="@+id/txt_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="center"
            android:text="@{mainviewmodel.edittextMsg}"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_add"
            android:layout_marginTop="@dimen/_50sdp"
            android:hint="@string/enter_the_message"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="@={mainviewmodel.edittextMsg}" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/float_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_msg"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:backgroundTint="@color/dark_blue"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_add"
            app:tint="@color/white" />

    </RelativeLayout>

</layout>
